  <!-- SCRIPTS -->
  <script>
    // Header/Footer compartidos
    fetch('/components/header.html').then(r=>r.text()).then(h=>document.getElementById('qv-header-placeholder').innerHTML=h);
    fetch('/components/footer.html').then(r=>r.text()).then(f=>document.getElementById('qv-footer-placeholder').innerHTML=f);

    // EnvÃ­o de formulario â†’ /api/leads.php con UTM
    document.addEventListener('submit', async (e) => {
      const form = e.target.closest('form.qv-form'); if(!form) return;
      e.preventDefault();
      const fd = new FormData(form);
      if(!fd.get('brand')) fd.set('brand','qivodigital');
      if(!fd.get('source_page')) fd.set('source_page', location.pathname);
      const params = new URLSearchParams(location.search);
      ['utm_source','utm_medium','utm_campaign'].forEach(k=>{ if(params.get(k)&&!fd.get(k)) fd.set(k, params.get(k)); });
      try{
        const res = await fetch('/api/leads.php',{method:'POST',body:fd});
        const json = await res.json();
        if(json.ok){ form.reset(); alert('âœ… Recibimos tu solicitud. Te contactaremos en menos de 24 h.'); }
        else{ alert('âŒ No pudimos registrar tu solicitud. Intenta nuevamente.'); }
      }catch(_){ alert('âš ï¸ Error de red. Verifica tu conexiÃ³n e intenta otra vez.'); }
    });
  </script>
