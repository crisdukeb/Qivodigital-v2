  <div id="footer-placeholder"></div>

  <script>
    // Header/Footer
    fetch('/components/header.html').then(r=>r.text()).then(h=>document.getElementById('header-placeholder').innerHTML=h);
    fetch('/components/footer.html').then(r=>r.text()).then(f=>document.getElementById('footer-placeholder').innerHTML=f);

    // Envío de formulario
    document.addEventListener('submit', async (e) => {
      const form = e.target.closest('form.qv-form');
      if (!form) return;
      e.preventDefault();
      const fd = new FormData(form);
      if (!fd.get('brand')) fd.set('brand','qivodigital');
      if (!fd.get('source_page')) fd.set('source_page', location.pathname);
      const params = new URLSearchParams(location.search);
      ['utm_source','utm_medium','utm_campaign'].forEach(k=>{ if(params.get(k) && !fd.get(k)) fd.set(k, params.get(k)); });
      try{
        const res = await fetch('/api/leads.php',{method:'POST',body:fd});
        const j = await res.json();
        if(j.ok){ form.reset(); alert('✅ Recibimos tu solicitud. Te contactaremos en &lt; 24 h.'); }
        else{ alert('❌ No pudimos registrar tu solicitud. Intenta nuevamente.'); }
      }catch(err){ alert('⚠️ Error de red. Verifica tu conexión e intenta otra vez.'); }
    });
  </script>
