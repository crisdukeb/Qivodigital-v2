<!-- EnvÃ­o a /leads.php con captura UTM (igual al Home) -->
<script>
document.addEventListener('submit', async (e) => {
  const form = e.target.closest('form.qv-form');
  if (!form) return;
  e.preventDefault();

  const fd = new FormData(form);
  if (!fd.get('brand')) fd.set('brand','qivodigital');
  if (!fd.get('source_page')) fd.set('source_page', location.pathname);

  const params = new URLSearchParams(location.search);
  ['utm_source','utm_medium','utm_campaign'].forEach(k=>{
    if (params.get(k) && !fd.get(k)) fd.set(k, params.get(k));
  });

  try {
    const res = await fetch('/leads.php', { method:'POST', body: fd });
    const json = await res.json();
    if (json.ok) {
      form.reset();
      alert('âœ… Recibimos tu solicitud. Te contactaremos en menos de 24 h.');
    } else {
      alert('âŒ No pudimos registrar tu solicitud. Intenta nuevamente.');
    }
  } catch (err) {
    alert('âš ï¸ Error de red. Verifica tu conexiÃ³n e intenta otra vez.');
  }
});
</script>

