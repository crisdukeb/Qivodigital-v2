  <script>
    fetch("/components/footer.html").then(r=>r.text()).then(f=>document.getElementById("footer-placeholder").innerHTML=f);
    document.addEventListener('submit', async (e)=>{
      const form=e.target.closest('form.qv-form'); if(!form) return; e.preventDefault();
      const fd=new FormData(form), p=new URLSearchParams(location.search);
      ['utm_source','utm_medium','utm_campaign'].forEach(k=>{if(p.get(k)&&!fd.get(k)) fd.set(k,p.get(k));});
      try{const r=await fetch('/api/leads.php',{method:'POST',body:fd});const j=await r.json();
        alert(j.ok?'‚úÖ Recibimos tu solicitud.':'‚ùå No pudimos registrar tu solicitud.'); if(j.ok) form.reset();
      }catch{alert('‚ö†Ô∏è Error de red. Intenta de nuevo.');}
    });
  </script>
